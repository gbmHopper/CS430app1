<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyStyledActionBar</item>
    </style>

    <style name="MyStyledActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="background">@color/blueviolet</item>
    </style>

    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="HomePageActivityStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/goldenrod</item>
    </style>

</resources>
